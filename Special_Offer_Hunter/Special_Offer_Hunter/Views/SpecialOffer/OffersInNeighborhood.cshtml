@using Special_Offer_Hunter.Models;
@model SpecialOfferViewModel



<div class="row">
    <div class="col col-lg-12">
        <form asp-action="OffersInNeighborhood" asp-controller="SpecialOffer">
            <div class="row">
                <div class="col col-lg-1"></div>
                <div class="col-lg-2 ">
                    <label class="font-weight-bold" asp-for="PriceValue">Cena</label>
                    <input class="form-control" asp-for="PriceValue" />
                </div>

                <div class="col-lg-2 ">
                    <label class="font-weight-bold" asp-for="ProductName">Nazwa</label>
                    <input class="form-control" asp-for="ProductName" />
                </div>

                <div class="col-lg-2 ">
                    <label class="font-weight-bold" asp-for="CategoryName">Kategoria</label>
                    <input class="form-control" asp-for="CategoryName" />
                </div>

                <div class="col-lg-2 ">
                    <label class="font-weight-bold" asp-for="ShopName">Sklep</label>
                    <input class="form-control" asp-for="ShopName" />
                </div>

                <div class="col-lg-2 ">
                    <label class="font-weight-bold" asp-for="Distance">Odległość</label>
                    <input class="form-control" asp-for="Distance" />
                </div>
                <div class="col col-lg-1">
                    <br />
                    <button class="btn btn-info" type="submit">Filtruj</button>
                </div>


            </div>

        </form>
    </div>





    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nazwa</th>
                <th scope="col">Cena</th>
                <th scope="col">Sklep</th>
                <th scope="col">Odległość</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.list2 != null && Model.list2.Count > 0)
            {
                @foreach (var p in Model.list2)
                {
                    <tr>
                        <th scope="row">1</th>
                        <td>@p.Key.Name</td>
                        <td>@p.Key.Product_Price.Price</td>
                        <td>@p.Key.Shop.Name</td>
                        <td>@p.Value</td>

                    </tr>
                }
            }


        </tbody>
    </table>

</div>
